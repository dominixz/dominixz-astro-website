---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Dome from '@src/assets/img/dome.jpg';
import Prose from '../components/Prose.astro';

---

<BaseLayout
	title="DominixZ - About Mee"
	description="Live smart & Geeky"
>
  <div class='container'>
		<main class='prose text-lg dark:prose-invert'>
      <article>
        <div class='w-full md:flex md:items-center gap-16 mb-10'>
          <div class="text-pretty leading-9">
            <h1 class="text-4xl font-bold mb-4">I'm dome</h1>
            <Prose>
              <div class="text-lg">
                <p>I am a Co-founder of Wisesight from Thailand.</p>
                <p>I'm testing Astro</p>  
              </div>
            </Prose>
          </div>
          <Image src={Dome} alt="Warodom Dansuwandamrong" width={300}  class="rounded-3xl rotate-3 mx-4 md:mx-0"/>
        </div>     
        <div>
          
        </div>
        </article>
      </article>
    </main>
  </div>
</BaseLayout>
